<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:agendaCalendar="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    android:orientation="vertical">

    <com.github.tibolte.agendacalendarview.AgendaCalendarView
        android:id="@+id/agendaView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1"
        agendaCalendar:agendaCurrentDayTextColor="@color/blue_3"
        agendaCalendar:calendarColor="@color/gray_1"
        agendaCalendar:calendarCurrentDayTextColor="@color/blue_3"
        agendaCalendar:calendarDayTextColor="@color/gray_4"
        agendaCalendar:calendarHeaderColor="@color/gray_1"
        agendaCalendar:calendarPastDayTextColor="@color/blue_2"
        agendaCalendar:fabColor="@color/gray_3" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1">

        <TextView
            android:id="@+id/text_viewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_4" />
    </androidx.core.widget.NestedScrollView>
</LinearLayout>