<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Profile Name"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/profileLevelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:text="ProfileLevelType"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/innStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/blue_3"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="Pause Damage"
            android:textColor="#000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/health"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:paddingLeft="-20dp"
            android:src="@drawable/health"/>

        <ProgressBar
            android:id="@+id/healthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/health"
            android:indeterminate="false"
            android:secondaryProgress="100"
            android:minHeight="30dp"
            android:minWidth="200dp"
            android:progressTint="@color/red_3"
            android:progressBackgroundTint="@color/red_3"
            android:secondaryProgressTint="@color/red_3"
            android:scaleY="5"
            android:progress="50" />

        <TextView
            android:id="@+id/profileHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile HP"
            android:layout_toEndOf="@+id/healthBar"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/exp"
            android:layout_width="78dp"
            android:layout_height="40dp"
            android:src="@drawable/exp"/>

        <ProgressBar
            android:id="@+id/expBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/exp"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:secondaryProgress="100"
            android:minHeight="30dp"
            android:minWidth="200dp"
            android:progressTint="@color/yellow_3"
            android:progressBackgroundTint="@color/yellow_3"
            android:secondaryProgressTint="@color/yellow_3"
            android:scaleY="5"
            android:progress="50" />

        <TextView
            android:id="@+id/profileExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Exp"
            android:layout_toEndOf="@+id/expBar"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/mana"
            android:layout_width="78dp"
            android:layout_height="40dp"
            android:src="@drawable/mana"/>

        <ProgressBar
            android:id="@+id/manaBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/mana"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:secondaryProgress="100"
            android:minHeight="30dp"
            android:minWidth="200dp"
            android:progressTint="@color/blue_3"
            android:progressBackgroundTint="@color/blue_3"
            android:secondaryProgressTint="@color/blue_3"
            android:scaleY="5"
            android:progress="50" />

        <TextView
            android:id="@+id/profileMana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Mana"
            android:layout_toEndOf="@+id/manaBar"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest Invitation"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/questStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest Status"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/questAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Accept"
            android:textColor="@color/blue_1" />

        <Button
            android:id="@+id/questReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Reject"
            android:textColor="@color/red_1" />
    </LinearLayout>
</LinearLayout>