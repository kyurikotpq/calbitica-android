<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@color/blue_1"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/teal_1"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:firstDayOfWeek="sunday"
        app:showFirstDayOfWeekFirst="true"
        app:noOfVisibleDays="7"
        app:todayHeaderTextColor="@color/red_1"
        app:headerRowBackgroundColor="@color/white"
        app:dayBackgroundColor="@color/cardview_dark_background"
        app:todayBackgroundColor="#ebeb34"/>
</LinearLayout>