<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.calbitica.app">

    <!-- Internet Access for the Google Account(MUST)-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Check the user got the conntection to the internet (MUST have INTERNET then can work)-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allow to call for the About Page(MUST)-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

<!--    For application android:name -> When there more than 1 MVC in android, it will call the Notification first, then to CheckInternetConnection,-->
<!--    back again to Application-->
    <application
        android:name=".Notification.Notification"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:theme">
        <!-- Splash Screen Page -->
        <activity
            android:name="com.calbitica.app.SplashScreen.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Google Account Page-->
        <activity android:name="com.calbitica.app.Auth.SignInActivity" />
        <!-- Fixed Main Page of Navigation Bar -->
        <activity android:name="com.calbitica.app.NavigationBar.NavigationBar" />
        <!-- WeekFragment CreateEvent Page-->
        <activity android:name="com.calbitica.app.Week.WeekCreateEvent" />
        <!-- WeekFragment EditEvent Page-->
        <activity android:name="com.calbitica.app.Week.WeekEditEvent" />

        <!-- Check the Internet Connection-->
        <receiver
            android:name= ".Internet.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>
</manifest>