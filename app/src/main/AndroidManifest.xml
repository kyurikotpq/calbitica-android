<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.calbitica.app">

    <!-- Internet Access for the Google Account(MUST)-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Allow to call for the About Page(MUST)-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SET_ALARM" />

<!--    For application android:name -> When there more than 1 MVC in android, it will call the Notification first, then to CheckInternetConnection,-->
<!--    back again to Application-->
    <application
        android:name=".Internet.CheckInternetConnection"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:theme">
        <!-- Splash Screen Page -->
        <activity
            android:name="com.calbitica.app.SplashScreen.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Google Account Page-->
        <activity android:name="com.calbitica.app.SignIn.SignIn" />
        <!-- Fixed Main Page of Navigation Bar -->
        <activity android:name="com.calbitica.app.NavigationBar.NavigationBar" />
        <!-- WeekFragment CreateEvent Page-->
        <activity android:name="com.calbitica.app.Week.WeekSaveEvent" />
        <!-- WeekFragment EditEvent Page-->

        <receiver android:name=".Notification.Notification"/>
    </application>
</manifest>