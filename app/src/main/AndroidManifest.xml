<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.calbitica.app">

    <!-- Internet Access for the Google Account(MUST)-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:theme">
        <!-- Splash Screen Page -->
        <activity
            android:name="com.calbitica.app.SplashScreen.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Google Account Page-->
        <activity android:name="com.calbitica.app.Google_Acccount.SignInActivity" />
        <!-- Fixed Main Page of Navigation Bar -->
        <activity android:name="com.calbitica.app.Navigation_Bar.NavigationBar" />
        <!-- WeekFragment CreateEvent Page-->
        <activity android:name="com.calbitica.app.Week_Calendar.Week_CreateEvent" />
        <!-- WeekFragment EditEvent Page-->
        <activity android:name="com.calbitica.app.Week_Calendar.Week_EditEvent" />
    </application>
</manifest>